{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "esnext",
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["esnext", "esnext.asynciterable"],
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": ["src/"],
  "exclude": ["node_modules/"]
}
